<%= link_to '#', data: { toggle: 'modal', target: "#tell-a-friend-" + part.id.to_s} do %>
  <span class="glyphicon glyphicon-share" title="Tell a Friend"></span>
<% end %>
<div id="tell-a-friend-<%= part.id %>" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalLabel-TaF-<%= part.id %>" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= bootstrap_form_for :tell_a_friend, url: send_tell_a_friend_path, method: 'GET', html: { class: 'form-horizontal' } do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="modalLabel-TaF-<%= part.id %>">Tell a Friend</h4>
        </div>
        <div class="modal-body">
          <%= f.label :email %>
          <%= f.text_field :email, hide_label: "true", required: 'required', class: "width40 left-15" %>
          <%= f.hidden_field :part_id, value: part.id %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Send mail", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>