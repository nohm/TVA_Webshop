<% provide(:title, 'New part') %>
<% breadcrumb :parts, @parts %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for(@part, :url => device_product_category_parts_path(params[:device_id], params[:product_id], params[:category_id])) do |f| %>
      <%= f.alert_message "Please fix the errors below." %>
      
      <%= f.text_field    :name %>
      <%= f.text_field    :brand %>
      <%= f.select(:condition_select, options_for_select(Part.order('condition').uniq.pluck(:condition).collect { |condition| [condition] }), { include_blank: "Select an existing condition", :label => 'Condition <small>Either select an existing condition or create a new one</small>'.html_safe}) %>
      <%= f.text_field    :condition, :value => nil, :hide_label => true %>
      <%= f.text_field    :warranty %>
      <%= f.number_field  :weight, :label => "Weight in grams", :value => 0, :min => 0 %>
      <%= select("part", "location_id", Location.all.order(city: :asc, street: :asc).collect {|location| [ "#{location.city}, #{location.street}", location.id ] }, { prompt: 'Choose location' }, { class: "form-control", id: "location_select" }) %>
      <%= f.number_field  :stock, :value => 0, :min => 0 %>
      <%= f.label         :price %>
      <%= f.text_field    :price_ex, :prepend => 'â‚¬', :placeholder => '0.00', :hide_label => true %>
      <%= f.file_field    :partimagefull, :class => "big", :label => "Placeholder image" %>

      <%= f.submit "Add part", class: "btn btn-primary" %>
      <%= link_to("Cancel", device_product_category_parts_path(params[:device_id], params[:product_id], params[:category_id]), class: "btn btn-primary") %>
    <% end %>
  </div>
</div>