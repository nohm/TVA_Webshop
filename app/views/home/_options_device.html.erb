<%= bootstrap_form_tag url: search_path, method: 'GET', html: {class: "form-inline"} do |f| %>
	<%= f.select :product_device_id, options_for_select(Device.all.collect { |device| [device.name.titleize, device.id] }, selected: @device.id), { prompt: "Choose device", hide_label: true}, { id: 'device_select' } %> 
<% end %>