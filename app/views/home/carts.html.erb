<div class="panel-body panel-table">
    
  <% if @carts.blank? %>
    <p class="empty_list"> No stock found for this part </p>
  <% else %>
    <div class="table-responsive col-md-6 col-md-offset-3">
      <table class="table table-hover borderGray">
        <thead>
          <tr>
            <th>Id</th>
            <th>User</th>
            <th>Purchased</th>
            <th>Status id</th>
            <th class="small-col"></th>
          </tr>
        </thead>
        <tbody>
          <% @carts.each do |cart| %>
            <tr>
              <td><%= cart.id %></td>
              <td><%= User.find(cart.user_id).name %></td>
              <td><%= cart.purchased %></td>
              <td><%= cart.cart_status_id %></td>
              <td>
                <%= link_to edit_user_cart_path(current_user, cart) do %>
                  <span class="glyphicon glyphicon-pencil" title="Edit"></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>