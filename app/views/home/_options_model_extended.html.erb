<% if !params[:id].blank? %>
	<%= bootstrap_form_tag url: search_path, method: 'GET', html: {class: "form-inline"} do |f| %>
		<%= f.select :product_model_extended, options_for_select(@products.collect { |product| [product] }, 0), {:selected => params[:model_extended], prompt: "Choose model", hide_label: true}, { id: 'model_extended_select' } %>
	<% end %>
<% else %>
	<%= bootstrap_form_tag url: search_path, method: 'GET', html: {class: "form-inline"} do |f| %>
		<%= f.select :product_model_extended, options_for_select(@products.collect { |product| [product] }, 0), {:selected => @product.model_extended, prompt: "Choose model", hide_label: true}, { id: 'model_extended_select' } %>
	<% end %>
<% end %>