<%= bootstrap_form_tag url: search_path, method: 'GET', html: {class: "form-inline"} do |f| %>
	<%= f.select :product_model_extended, options_for_select(@product.collect { |product| [product.first, product.last] }, 0), {:selected => params[:product_model_extended], prompt: "Choose model", hide_label: true}, { id: 'model_extended_select' } %>
<% end %>