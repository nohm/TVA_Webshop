<% if !params[:id].blank? %>
	<%= bootstrap_form_tag url: search_path, method: 'GET', html: {class: "form-inline"} do |f| %>
		<%= f.select :product_brand, options_for_select(@products.collect { |product| [product] }, selected: params[:brand]), { prompt: "Choose brand", hide_label: true}, { id: 'brand_select' } %> 
	<% end %>
<% elsif !params[:p_id].blank? %>
	<%= bootstrap_form_tag url: search_path, method: 'GET', html: {class: "form-inline"} do |f| %>
		<%= f.select :product_brand, options_for_select(@products.collect { |product| [product] }, selected: @product.brand), { prompt: "Choose brand", hide_label: true}, { id: 'brand_select' } %> 
	<% end %>
<% elsif !params[:d_id].blank? %>
	<%= bootstrap_form_tag url: search_path, method: 'GET', html: {class: "form-inline"} do |f| %>
		<%= f.select :product_brand, options_for_select(@products.collect { |product| [product] }, selected: @brand), { prompt: "Choose brand", hide_label: true}, { id: 'brand_select' } %> 
	<% end %>
<% end %>