<div id="alert-box" style="margin-top: 10px;">
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
      <% if name == "success" %>
        <div class="alert alert-success">
          <a class="close" data-dismiss="alert">&#215;</a>
          <div id="flash_<%= name %>">
            <span class="glyphicon glyphicon-<%= name == "success" ? "ok" : "remove" %>"></span>
           <%= '  ' + msg %>
          </div>
          <% flash.delete(name) %>
        </div>
      <% elsif name == "notice" %>
        <div class="alert alert-danger">
          <a class="close" data-dismiss="alert">&#215;</a>
          <div id="flash_<%= name %>">
            <span class="glyphicon glyphicon-<%= name == "success" ? "ok" : "remove" %>"></span>
           <%= '  ' + msg %>
          </div>
          <% flash.delete(name) %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
