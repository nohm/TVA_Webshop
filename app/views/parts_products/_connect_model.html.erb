<%= bootstrap_form_tag url: root_path, method: 'GET', html: {class: "form-inline"} do |f| %>
	<%= f.select :connection_model, options_for_select(@product.collect { |product| [product] }, 0), {:selected => params[:connection_model], prompt: "Choose model", hide_label: true}, { id: 'connection_model_select' } %>
<% end %>