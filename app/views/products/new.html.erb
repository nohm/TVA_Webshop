<% provide(:title, 'New product') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for(@product, :url => device_products_path(params[:device_id]) ) do |f| %>
      <%= f.alert_message "Please fix the errors below." %>

      <%= f.text_field :brand, label: 'Brand <small>Only pick one</small>'.html_safe %>
      <%= f.select(:brand_select, Product.order('brand').uniq.pluck(:brand), { include_blank: true, hide_label: true}) %>
      <%= f.text_field :model, label: 'Model <small>Only pick one</small>'.html_safe %>
      <%= f.select(:model_select, Product.order('model').uniq.pluck(:model), { include_blank: true, hide_label: true }) %>
      <%= f.text_field :model_serial %>

      <%= f.submit "Add product", class: "btn btn-primary" %>
      <br><br>
      <%= link_to("Cancel", device_products_path(params[:device_id]), class: "btn btn-primary") %>
    <% end %>
  </div>
</div>