<% provide(:title, 'New product') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for(@product) do |f| %>
      <%= f.alert_message "Please fix the errors below." %>
    	
      <%= f.text_field :device, label: 'Device <small>Only pick one</small>'.html_safe %>
      <%= f.select(:device_select, Product.uniq.pluck(:device) {|u| [u.device]}, { include_blank: true, hide_label: true}) %>
      <%= f.text_field :brand, label: 'Brand <small>Only pick one</small>'.html_safe %>
      <%= f.select(:brand_select, Product.uniq.pluck(:brand) {|u| [u.brand]}, { include_blank: true, hide_label: true}) %>
      <%= f.text_field :model, label: 'Model <small>Only pick one</small>'.html_safe %>
      <%= f.select(:model_select, Product.uniq.pluck(:model) {|u| [u.model]}, { include_blank: true, hide_label: true }) %>
      <%= f.text_field :model_serial %>

      <%= f.submit "Add part", class: "btn btn-primary" %>
      <br><br>
      <%= link_to("Cancel", products_path, class: "btn btn-primary") %>
    <% end %>
  </div>
</div>