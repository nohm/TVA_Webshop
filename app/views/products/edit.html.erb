<% provide(:title, 'Edit product') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for(@product) do |f| %>
      <%= f.alert_message "Please fix the errors below." %>
    	
      <%= f.text_field :device %>
      <%= f.text_field :brand %>
      <%= f.text_field :model %>
      <%= f.text_field :model_serial %>

      <%= f.submit "Edit product", class: "btn btn-primary" %>
      <br><br>
      <%= link_to("Cancel", products_path, class: "btn btn-primary") %>
    <% end %>
  </div>
</div>