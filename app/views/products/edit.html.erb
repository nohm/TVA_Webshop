<% provide(:title, 'Edit product') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for(@product, :url => device_product_path(params[:device_id], params[:id])) do |f| %>
      <%= f.alert_message "Please fix the errors below." %>
    	
      <%= f.label 'Device' %>
      <%= f.select(:device_id, Device.pluck(:name, :id), { include_blank: true, hide_label: true}) %>
      <%= f.text_field :brand %>
      <%= f.text_field :model %>
      <%= f.text_field :model_serial %>

      <%= f.submit "Edit product", class: "btn btn-primary" %>
      <br><br>
      <%= link_to("Cancel", device_products_path(params[:device_id]), class: "btn btn-primary") %>
    <% end %>
  </div>
</div>