<% provide(:title, 'New location') %>
<% breadcrumb :locations, @location %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for(@location) do |f| %>
      <%= f.alert_message "Please fix the errors below." %>

      <%= f.text_field      :name, autofocus: true %>
      <%= f.text_field      :city %>
      <%= f.text_field      :street %>
      <%= f.text_field      :postal_code %>
      <%= f.label           :country %>
      <%= f.country_select  :country,  {}, { :class => "form-control" } %>
      <%= f.text_field      :phone_number %>

      <%= f.submit "Edit location", class: "btn btn-primary" %>
      <%= link_to("Cancel", locations_path, class: "btn btn-primary") %>
    <% end %>
  </div>
</div>