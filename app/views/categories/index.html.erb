<% provide(:title, "Categories") %>

  <div class="panel-body panel-table">
    <% if @categories.length == 0 %>
      <p class="empty_list">
        <%= "De lijst is leeg" %>
      </p>
    <% else %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th><%= "Product id" %></th>
              <th><%= "Device name" %></th>
              <th><%= "Name" %></th>
              <th class="small-col"></th>
              <th class="small-col"></th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.product_id %></td>
                <td><%= category.product.device %></td>
                <td><%= category.name %></td>
                <td>
                  <%= link_to edit_category_path(category) do %>
                    <span class="glyphicon glyphicon-pencil"></span>
                  <% end %>
                </td>
                <td>
                  <%= link_to(category_path(category), :data => { :confirm => "Are you sure?" }, :method => :delete) do %>
                    <span class="glyphicon glyphicon-remove"></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
    <%= link_to("Add category", new_category_path, :class => 'btn btn-mini btn-primary') %>
  </div>
