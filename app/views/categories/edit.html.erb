<% provide(:title, 'Edit category') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for(@category, :url => device_product_category_path(params[:device_id], params[:product_id], params[:id])) do |f| %>
      <%= f.alert_message "Please fix the errors below." %>

      <%= f.text_field :name %>
      <%= f.file_field :cimg, label: "Placeholder image" %>

      <%= f.submit "Edit category", class: "btn btn-primary" %>
      <br><br>
      <%= link_to("Cancel", :back, class: "btn btn-primary") %>
    <% end %>
  </div>
</div>