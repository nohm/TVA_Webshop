<% provide(:title, 'New category') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= bootstrap_form_for(@category, :url => device_product_categories_path(params[:device_id], params[:product_id])) do |f| %>
      <%= f.alert_message "Please fix the errors below." %>
      
      <%= f.text_field :name %>

      <%= f.submit "Add category", class: "btn btn-primary" %>
      <br><br>
      <%= link_to("Cancel", device_product_categories_path(params[:device_id], params[:product_id]), class: "btn btn-primary") %>
    <% end %>
  </div>
</div>